<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>
<link rel="stylesheet" href="/css/register.css">


<div class="registration-container">
    <div class="registration-left-panel">
        <img src="/media/images/logo.png" alt="춰Que Buen Dato!" class="registration-logo">
    </div>
    <div class="registration-right-panel">
        <h1 class="welcome-headline">춰BIENVENIDO!</h1>
        <form action="/register" method="POST" id="registrationForm" onsubmit="return validarFormulario()" novalidate>
            <div class="form-group">
                <label for="username">Ingresa tu nombre de usuario</label>
                <input type="text" id="username" name="username" placeholder="Escriba un nombre de usuario" required>
            </div>

            <div class="form-group">
                <label for="email">Ingresa tu correo electronico</label>
                <input type="email" id="email" name="email" placeholder="Escriba su correo" required>
            </div>

            <div class="form-group">
                <label for="password">Ingresa una contrase침a</label>
                <div style="position: relative;">
                    <input type="password" id="password" name="password" placeholder="Escriba una contrase침a" required>
                    <span onclick="togglePassword('password', this)" class="password-toggle-icon">游녜</span>
                </div>
            </div>

            <div class="form-group">
                <label for="confirm_password">Confirma tu contrase침a</label>
                <div style="position: relative;">
                    <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirme su contrase침a" required>
                    <span onclick="togglePassword('confirm_password', this)" class="password-toggle-icon">游녜</span>
                </div>
            </div>

            <span id="error-mensaje"></span>

            <button type="submit" class="button">Registrarse</button>

            <p class="login-link">
                쯏a tienes cuenta? <a href="/login">Inicia sesi칩n</a>
            <br> 

            <a href="/auth/google" style="text-decoration: none;">
                <button type="button" style="background-color: white; color: #444; border: 1px solid #ccc; padding: 10px 15px; font-size: 16px; display: flex; align-items: center; margin-bottom: 15px; width: 100%;">
                    <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" style="width: 20px; height: 20px; margin-right: 10px;">
                    Registrate con Google
                </button>
            </a>
            </p>
        </form>
    </div>
</div>
<script>
        function validarFormulario() {
            const username = document.getElementById('username')
            const email = document.getElementById('email');
            const password = document.getElementById('password');
            const confirm_password = document.getElementById("confirm_password")

            // Limpiar errores anteriores
            document.querySelectorAll('.error-mensaje').forEach(e => e.remove());

            let valido = true;

            if (!username.value.trim()) {
                mostrarError(username, "El nombre de usuario es obligatorio");
                valido = false;
            }

            if (!email.value.trim()) {
                mostrarError(email, "El correo es obligatorio");
                valido = false;
            } else if (!/^[\w\.-]+@[\w\.-]+\.\w{2,4}$/.test(email.value)) {
                mostrarError(email, "Correo inv치lido");
                valido = false;
            }

            if (!password.value.trim()) {
                mostrarError(password, "La contrase침a es obligatoria");
                valido = false;
            }

            if (!confirm_password.value.trim()) {
                mostrarError(confirm_password, "La confirmacion de la contrase침a es obligatoria");
                valido = false;
            }


            return valido;
        }

        function mostrarError(input, mensaje) {
            const error = document.createElement('p');
            error.className = 'error-mensaje';
            error.style.color = 'red';
            error.style.fontSize = '14px';
            error.style.marginTop = '5px';
            error.textContent = mensaje;

            input.parentElement.appendChild(error);
        }
        </script>

<script>
    // **Funci칩n togglePassword movida directamente aqu칤**
    function togglePassword(idCampo, iconElement) {
        let input = document.getElementById(idCampo);
        if (input.type === "password") {
            input.type = "text";
            iconElement.textContent = "游"; // Icono de ojo tachado
        } else {
            input.type = "password";
            iconElement.textContent = "游녜"; // Icono de ojo abierto
        }
    }

    // Tu JavaScript de validaci칩n de formulario existente (sin cambios)
    document.addEventListener("DOMContentLoaded", function () {
        const params = new URLSearchParams(window.location.search);
        const error = params.get("error");
        const errorMensaje = document.getElementById("error-mensaje");

        if (error === "emailExists") {
            errorMensaje.innerHTML = `
                El correo ya est치 registrado o falta verificarse.<br>
                <a href="/login" style="color: #7B24C0; text-decoration: underline;">Inicia sesi칩n aqu칤</a>
            `;
        } else if (error === "passwordMismatch") {
            errorMensaje.textContent = "Las contrase침as no coinciden.";
        } else if (error === "passwordLength") {
            errorMensaje.textContent = "La contrase침a debe tener entre 8 y 20 caracteres.";
        } else if (error === "passwordUppercase") {
            errorMensaje.textContent = "La contrase침a debe incluir al menos una may칰scula.";
        } else if (error === "passwordLowercase") {
            errorMensaje.textContent = "La contrase침a debe incluir al menos una min칰scula.";
        } else if (error === "passwordNumber") {
            errorMensaje.textContent = "La contrase침a debe incluir al menos un n칰mero.";
        } else if (error === "passwordSpecial") {
            errorMensaje.textContent = "La contrase침a debe incluir al menos un caracter especial [!@#$%^&*(),.?:{}|<>]";
        } else if (error === "invalidEmail") {
            errorMensaje.textContent = "El formato del correo no es v치lido.";
        }
    });

    document.getElementById("registrationForm").addEventListener("submit", function (event) {
        let password = document.getElementById("password").value;
        let confirmPassword = document.getElementById("confirm_password").value;
        let email = document.getElementById("email").value;
        let errorMensaje = document.getElementById("error-mensaje");
        errorMensaje.textContent = "";

        const emailRegex = /^[^\s@]+@[^\s@]+\.(com|mx)$/i;
        if (!emailRegex.test(email)) {
            errorMensaje.textContent = "El correo no es v치lido.";
            event.preventDefault();
            return;
        }

        if (password.length > 20 || password.length < 8) {
            errorMensaje.textContent = "La contrase침a debe tener entre 8 y 20 caracteres.";
            event.preventDefault();
            return;
        }
        if (!/[A-Z]/.test(password)) {
            errorMensaje.textContent = "La contrase침a debe incluir al menos una may칰scula.";
            event.preventDefault();
            return;
        }
        if (!/[a-z]/.test(password)) {
            errorMensaje.textContent = "La contrase침a debe incluir al menos una min칰scula.";
            event.preventDefault();
            return;
        }
        if (!/[0-9]/.test(password)) {
            errorMensaje.textContent = "La contrase침a debe incluir al menos un n칰mero.";
            event.preventDefault();
            return;
        }
        if (!/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
            errorMensaje.textContent = "La contrase침a debe incluir al menos un caracter especial [!@#$%^&*(),.?:{}|<>]";
            event.preventDefault();
            return;
        }
        if (password !== confirmPassword) {
            errorMensaje.textContent = "Las contrase침as no coinciden.";
            event.preventDefault();
            return;
        }
    });


</script>